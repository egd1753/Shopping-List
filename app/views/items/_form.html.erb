<h4>Add Item</h4>

<%= form_for [list, item] do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new item" %>
  </div>
  <button>
    <%= f.submit "Save", class: 'btn btn-default pull-right' %>
  </button>
<% end %>
